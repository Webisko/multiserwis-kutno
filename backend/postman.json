{
  "info": {
    "name": "MultiSerwis Backend API",
    "description": "API endpoints documentation for MultiSerwis LMS platform",
    "version": "0.1.0"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/health"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"student@test.com\",\"password\":\"password123\"}"
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"newuser@test.com\",\"password\":\"password123\",\"name\":\"New User\"}"
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/auth/me",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Courses",
      "item": [
        {
          "name": "List Courses",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/courses"
          }
        },
        {
          "name": "Get Course Details",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/courses/course-slug"
          }
        },
        {
          "name": "Create Course (Admin)",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/api/courses",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"title\":\"New Course\",\"slug\":\"new-course\",\"description\":\"Course description\",\"difficulty\":\"beginner\",\"is_published\":true}"
            }
          }
        }
      ]
    },
    {
      "name": "Enrollments",
      "item": [
        {
          "name": "List My Enrollments",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/enrollments",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Enroll in Course",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/api/enrollments",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"course_id\":\"course-uuid-here\"}"
            }
          }
        }
      ]
    },
    {
      "name": "Progress",
      "item": [
        {
          "name": "Get Enrollment Progress",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/progress/enrollment-uuid",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Track Lesson Completion",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/api/progress",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"enrollment_id\":\"enrollment-uuid\",\"lesson_id\":\"lesson-uuid\",\"status\":\"completed\",\"time_spent_seconds\":300}"
            }
          }
        }
      ]
    },
    {
      "name": "Certificates",
      "item": [
        {
          "name": "List My Certificates",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/certificates",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Generate Certificate",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/api/certificates",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"enrollment_id\":\"enrollment-uuid\"}"
            }
          }
        },
        {
          "name": "Verify Certificate",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/api/certificates/CERT-2026-0001"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}
